# Database
MONGODB_URI=mongodb://localhost:27017/lexify_legal_ai
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/lexify_legal_ai

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Server
NODE_ENV=development
PORT=5000

# Email Configuration (for notifications)
EMAIL_FROM=noreply@lexify.ai
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# File Upload
MAX_FILE_UPLOAD=10000000
FILE_UPLOAD_PATH=./public/uploads

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Payment Gateway (Razorpay for India)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=lexify-documents
AWS_REGION=ap-south-1

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key
HUGGING_FACE_API_KEY=your_hugging_face_api_key

# Legal Database APIs
INDIAN_KANOON_API_KEY=your_indian_kanoon_api_key
MANUPATRA_API_KEY=your_manupatra_api_key

# Notification Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Session
SESSION_SECRET=your_session_secret_key_here